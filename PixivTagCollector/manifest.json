// vim: ts=2 sw=2 expandtab fenc=utf8 :
{
	"manifest_version": 2,

	"name" : "Pixiv Tag Collector",
	"description" : "pivivのタグ巡回を快適にするChrome拡張です。",

	"version" : "0.4",

	"icons": {
		"48": "Tag48x48.png",
		"128": "Tag128x128.png"
	},

	"permissions" : [
		"tabs",
		"storage",
		"http://www.pixiv.net/*"
	],

	"browser_action" : {
		"default_title" : "Pixiv Tag Collector",
		"default_icon" : "Tag48x48.png",
		"default_popup":"popup.html"
	},

	"background" : {
		  "scripts": [ "jquery-1.7.2.min.js", "background.js" ]
	},

	"options_page" : "options.html",

	"content_scripts": [
		  {
		      "matches": [ "http://www.pixiv.net/*" ],
		      "js": ["jquery-1.7.2.min.js", "content_script.js"]
		  }
	],

	"web_accessible_resources": [
		"Tag48x48.png",
		"style_ptc.css"
	]
}
